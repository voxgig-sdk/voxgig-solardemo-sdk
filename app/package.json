{
  "name": "solardemo-server",
  "version": "1.0.0",
  "description": "Solar System API server using Fastify",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "server": "npm run build && npm start",
    "validate": "tsx validate.ts",
    "validate:full": "npm run build && (npm start & echo $! > .server.pid) && sleep 3 && npm run validate; EXIT_CODE=$?; kill $(cat .server.pid) 2>/dev/null; rm .server.pid 2>/dev/null; exit $EXIT_CODE",
    "test": "npm run build && node --test dist/test/**/*.test.js",
    "test:watch": "node --test --watch dist/test/**/*.test.js",
    "test:unit": "npm run build && node --test dist/test/store/**/*.test.js",
    "test:integration": "npm run build && node --test dist/test/integration/**/*.test.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["fastify", "api", "typescript", "solar-system"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fastify": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3"
  }
}
